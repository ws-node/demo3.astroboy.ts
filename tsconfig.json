{
  "compilerOptions": {
    "sourceMap": true,
    "declaration": true,
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "target": "es6",
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "./dist",
    "lib": [
      "es2016",
      "es2015"
    ]
  },
  "include": [
    "./app",
  ]
}